- unless f.object.errors.empty?
  .errors
    - f.object.errors.full_messages.each do |msg|
      .error
        = msg
%div
  = f.label :name, 'Nazwa'
  %br
  = f.text_field :name
%div
  = f.label :description, 'Opis'
  %br
  = f.text_area :description, :style => 'height: 100px'
%div
  = f.label :users, 'Cz≈Çonkowie'
  .users
    - @group.users.all.each do |user|
      .user
        = check_box_tag 'team[user_ids][]', user.id, f.object.users.include?(user)
        = user.name