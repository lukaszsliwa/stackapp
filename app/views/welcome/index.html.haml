.left
  = image_tag 'stack.jpg'
.left
  .title StackApp
  .description
    Uczelniany System Prowadzenia Zajęć
    #login-box
      = form_for(User.new, :as => :user, :url => user_session_path) do |f|
        %p
          = f.label :email, 'E-mail'
          %br
          = f.email_field :email
        %p
          = f.label :password, 'Hasło'
          %br
          = f.password_field :password
        %p
          = f.check_box :remember_me
          = f.label :remember_me, 'zapamiętaj mnie'
        %p
          = f.submit "Zaloguj się"
          lub
          = link_to 'zarejestruj się', new_user_registration_path